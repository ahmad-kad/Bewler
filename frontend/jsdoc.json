{
  "source": {
    "include": ["src"],
    "includePattern": "\\.(js|jsx|ts|tsx)$",
    "exclude": ["node_modules", "dist", "build"]
  },
  "opts": {
    "destination": "../docs/_build/jsdoc",
    "recurse": true,
    "readme": "README.md"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true
    },
    "applicationName": "URC Machiato 2026 Frontend",
    "disallowProtoProperties": false,
    "disallowProtoMethods": false
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
